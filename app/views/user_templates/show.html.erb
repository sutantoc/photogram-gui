<h1> <%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id %></dd>
  
  <dt>Edit user</dt>
  <dd>
    <form action="/modify_user/<%= @the_user.id %>" method="post">
      <label for="new_username">Username</label> <input id="new_username" type="text" name="new_username" value="<%= @the_user.username %>">
      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%= @the_user.own_photos.count %>) </h2>

<table border="1">
  <tr>
    <td>Image</td>
    <td>Owner</td>
    <td>Caption</td>
    <td>Posted</td>
    <td> </td>
  </tr>

  <% @list_of_photos.each do |a_photo|%>
  <tr>
    <td> <img src="<%= a_photo.image %>"> </td>
    <td> <%= a_photo.poster.username %> </td>
    <td> <%= a_photo.caption %> </td>
    <td> <%= a_photo.created_at %> </td>
    <td> <a href="/photos/<%= a_photo.id %>"> Show details</a> </td>
  </tr>
  <% end %>
</table>
